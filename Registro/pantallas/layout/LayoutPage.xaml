<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registro.pantallas.layout.LayoutPage">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu principal">
            <StackLayout Orientation="Vertical">
                <ListView x:Name="lsvMenu" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding Titulo}" FontSize="25" TextColor="#212121" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontFamily="Roboto"/>
                               
                            </ViewCell>
                          
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>